---
import { hardware } from "../../utils/hardware";
---

<section
  class="rounded-2xl mx-2 bg-gradient-to-r from-rose-500 via-fuchsia-500 to-violet-500 p-0.5 shadow-xl my-20"
>
  <div
    class="p-4 bg-slate-200 dark:bg-black w-full h-full flex flex-col gap-4 justify-center items-center rounded-2xl"
  >
    <h2 class="text-xl text-gray-600 dark:text-gray-400">
      Built with GP2040-CE
    </h2>
    <ul
      class="flex items-center justify-center gap-4 flex-wrap font-bold text-2xl"
    >
      {hardware.slice(0, 6).map((h) => <li>{h.name}</li>)}
    </ul>
  </div>
</section>
