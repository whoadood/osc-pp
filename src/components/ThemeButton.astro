---
import TextGradient from "./TextGradient.astro";
interface Props {
  text: string;
  alt?: boolean;
  href: string;
}

const { text, alt, href } = Astro.props;
---

{
  alt ? (
    <a
      href={href}
      target="_blank"
      class="rounded bg-gradient-to-r from-rose-600 via-fuchsia-600 to-violet-600 hover:from-rose-500 hover:via-fuchsia-500 hover:to-violet-500 p-0.5 shadow-xl group"
    >
      <div class="rounded p-2 bg-slate-200 dark:bg-black font-bold">
        <TextGradient hover={true} text={text} />
      </div>
    </a>
  ) : (
    <a
      href={href}
      target="_blank"
      class={`p-2 rounded group hover:cursor-pointer font-bold bg-gradient-to-br from-rose-600 via-fuchsia-600 to-violet-700 hover:from-rose-500 hover:via-fuchsia-500 shadow-xl hover:to-violet-600 text-white`}
    >
      {text}
    </a>
  )
}
