---
interface Props {
  text: string;
  hover?: boolean;
}

const { text, hover } = Astro.props;
---

<span
  class={`text-transparent bg-clip-text bg-gradient-to-br ${
    hover
      ? "from-cyan-600 via-teal-600 to-indigo-600 group-hover:from-cyan-500 group-hover:via-teal-500 group-hover:to-indigo-500"
      : "from-cyan-500 via-teal-500 to-indigo-600"
  }`}>{text}</span
>
