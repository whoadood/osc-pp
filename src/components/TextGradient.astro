---
interface Props {
  text: string;
  hover?: boolean;
}

const { text, hover } = Astro.props;
---

<span
  class={`text-transparent bg-clip-text bg-gradient-to-br ${
    hover
      ? "from-rose-600 via-fuchsia-600 to-violet-600 group-hover:from-rose-500 group-hover:via-fuchsia-500 group-hover:to-violet-500"
      : "from-rose-500 via-fuchsia-500 to-violet-600"
  }`}>{text}</span
>
